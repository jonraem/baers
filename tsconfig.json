{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "strict": false,
    "target": "es2015",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib"
  },
  "exclude": ["lib"]
}
